@{
    ViewBag.Title = "Ratios";
}

<div class="jumbotron">
    <h1>Techs comparator</h1>
    <div class="description">The purpose of the app is to collect data about the available technologies at Softuni and compare it in order to help students to make better informed choice between them.</div>
    <p class="lead"></p>
</div>

<div class="actionLinks">
    <div class="btn-link">@Html.ActionLink("Home", "Index", "Home")</div>
    <div class="btn-link">@Html.ActionLink("Positive Reviews", "Positives", "Home")</div>
    <div class="btn-link">@Html.ActionLink("Negative Reviews", "Negatives", "Home")</div>
</div>

@{
    ViewBag.Title = "Home Page";
}

@model List<OldNewTeamProject.Models.Language>
<h3 style="text-align:center">Technologies by positive ratio</h3>
@for (int i = 1; i <= Model.Count; i++)
{
    <div class="row">
            <div class="language">
                <h2>@i. @Html.ActionLink(@Model[i - 1].Name, "Details/" + Model[i - 1].Id, "Languages")</h2>

                <div class="ratio">
                    @if (Model[i - 1].positives > 0)
                    {
                        <p>Positive ratio: @string.Format("{0:#.##}", Model[i - 1].ratio)%</p>
                    }
                    else
                    {
                        <p>Positive ratio: 0%</p>
                    }
                </div>
                <ul class="posts">
                    @foreach (var post in Model[i - 1].Posts)
                    {
                        <li>@post.Content ---> @post.Value</li>
                    }
                </ul>


            </div>
        </div>
}