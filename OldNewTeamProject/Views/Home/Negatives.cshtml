@{
    ViewBag.Title = "Home Page";
}

@model List<OldNewTeamProject.Models.Language>

@for (int i = 1; i <= Model.Count; i++)
{ 
  <div class="row">
        <div class="language">
            <h2>@i. @Html.ActionLink(Model[i - 1].Name, "Details/" + i, "Languages")</h2>
            
            <div class="ratio">
                @if (Model[i-1].negatives > 0)
                {
                    <p>Negative reviews @Model[i-1].negatives</p>
                }
                else
                {
                    <p>Negative reviews 0</p>
                }
            </div>
            <ul class="posts">
                @foreach (var post in Model[i-1].Posts)
                {
                    if (post.Value == "sucks")
                    {
                    <li>@post.Content ---> @post.Value</li>

                        }
                    }
            </ul>

        </div>
    </div>
}