@{
    ViewBag.Title = "Negatives";
}

<div class="jumbotron">
    <h1>Techs comparator</h1>
    <div description>The purpose of the app is to collect data about the available technologies at Softuni and compare it in order to help students to make better informed choice between them.</div>
    <p class="lead"></p>
</div>

<div class="actionLinks">
    <div class="btn-link">@Html.ActionLink("Home", "Index", "Home")</div>
    <div class="btn-link">@Html.ActionLink("Ratios", "Ratios", "Home")</div>
    <div class="btn-link">@Html.ActionLink("Positives Reviews", "Positives", "Home")</div>
</div>

@{
    ViewBag.Title = "Home Page";
}

@model List<OldNewTeamProject.Models.Language>
<h3 style="text-align:center">Technologies by total number of negative reviews</h3>
@for (int i = 1; i <= Model.Count; i++)
{ 
  <div class="row">
        <div class="language">
            <h2>@i. @Html.ActionLink(Model[i - 1].Name, "Details/" + Model[i - 1].Id, "Languages")</h2>
            
            <div class="ratio">
                @if (Model[i-1].negatives > 0)
                {
                    <p>Negative reviews: @Model[i-1].negatives</p>
                }
                else
                {
                    <p>Negative reviews: 0</p>
                }
            </div>
                <ul class="posts">

                    @foreach (var post in Model[i - 1].Posts)
                    {
                        if (post.Value == "sucks")
                        {
                            <li>@post.Content ---> @post.Value</li>

                        }
                    }
                </ul>
        </div>
    </div>
}